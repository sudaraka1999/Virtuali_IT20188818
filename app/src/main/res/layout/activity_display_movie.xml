<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisplayMovie">

    <TextView
        android:id="@+id/tv_cinebokdm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="@string/CineBok"
        android:textColor="@color/purple_700"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_mv1_r"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="73dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_displayTitle_r"
        app:srcCompat="@mipmap/mv1" />

    <ImageView
        android:id="@+id/iv_mv2_r"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="76dp"
        app:layout_constraintStart_toEndOf="@+id/iv_mv1_r"
        app:layout_constraintTop_toBottomOf="@+id/tv_displayTitle_r"
        app:srcCompat="@mipmap/mv2" />

    <ImageView
        android:id="@+id/iv_mv3_r"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="72dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_mv1_r"
        app:srcCompat="@mipmap/mv3" />

    <ImageView
        android:id="@+id/iv_mv4_r"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="72dp"
        app:layout_constraintStart_toEndOf="@+id/iv_mv3_r"
        app:layout_constraintTop_toBottomOf="@+id/btn_mv2_r"
        app:srcCompat="@mipmap/mv4" />

    <Button
        android:id="@+id/btn_mv1_r"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="24dp"
        android:onClick="gotoMovieReservation"
        android:text="View"
        app:backgroundTint="#000080"
        app:layout_constraintEnd_toStartOf="@+id/btn_mv2_r"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_mv1_r" />

    <Button
        android:id="@+id/btn_mv2_r"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="gotoMovieReservation"
        android:text="View"
        app:backgroundTint="#000080"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_mv1_r"
        app:layout_constraintStart_toStartOf="@+id/btn_mv4_r" />

    <Button
        android:id="@+id/btn_mv3_r"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="24dp"
        android:onClick="gotoMovieReservation"
        android:text="view"
        app:backgroundTint="#000080"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_mv3_r" />

    <Button
        android:id="@+id/btn_mv4_r"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="92dp"
        android:onClick="gotoMovieReservation"
        android:text="view"
        app:backgroundTint="#000080"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_mv3_r"
        app:layout_constraintStart_toEndOf="@+id/btn_mv3_r" />

    <TextView
        android:id="@+id/tv_displayTitle_r"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/dm_displayMovie"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_cinebokdm"
        tools:text="Display Movie Page" />

</androidx.constraintlayout.widget.ConstraintLayout>